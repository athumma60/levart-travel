<!-- Displays the view for the home page -->
<%= form_tag search_path, method: :get do %>
  <div class="row">
	<div class="col-md-6">
	  <%= text_field_tag :search, params[:search], placeholder: "Where are you going?", class: "form-control" %>
	</div>
	<div class="col-md-2">
	  <%= text_field_tag :start_date, params[:start_date], placeholder: "Start Date", class: "form-control" %>
	</div>
	<div class="col-md-2">
	  <%= text_field_tag :end_date, params[:end_date], placeholder: "End Date", class: "form-control" %>
	</div>
	<div class="col-md-2">
	  <%= submit_tag "Search", class: "btn btn-primary" %>
	</div>
  </div>
<% end %>

<br>

  <div class="text-center">
    <h2>Worldwide Travel</h2>
    <p>All at your fingertips</p>
  </div>

  <br>
 <!-- Makes a picture link to new york -->
  <div class="row">
    <div class="col-md-4 col-sm-12">
      <a href="/search?utf8=✓&search=new+york">
        <div class="discovery-card" style="background-image: url('assets/New_York.jpg')">
          <div class="va-container">
            <div class="va-middle text-center">
              <h2><strong>New York</strong></h2>
            </div>
          </div>
        </div>
      </a>
    </div>
<!-- make a picture link to london -->
    <div class="col-md-4 col-sm-6">
      <a href="/search?utf8=✓&search=london">
        <div class="discovery-card" style="background-image: url('assets/London.jpg')">
          <div class="va-container">
            <div class="va-middle text-center">
              <h2><strong>London</strong></h2>
            </div>
          </div>
        </div>
      </a>
    </div>
<!-- makes apicture link to berlin -->
    <div class="col-md-4 col-sm-6">
    <a href="/search?utf8=✓&search=berlin">
        <div class="discovery-card" style="background-image: url('assets/Berlin.jpg')">
          <div class="va-container">
            <div class="va-middle text-center">
              <h2><strong>Berlin</strong></h2>
            </div>
          </div>
        </div>
      </a>
    </div>
  </div>

  <br>

  <div class="text-center">
    <h2>Explore the world</h2>
    <p>See where people are traveling, all around the world.</p>
  </div>

  <br>

<div class="row">
  <% @rooms.each do |room| %>

	<div class="col-md-4">
	  <div class="panel panel-default">
		  <div class="panel-heading preview">
      <!-- show the primary picture of the room -->
		    <%= image_tag room.photos[0].image.url(:medium) if room.photos.length > 0 %>
		  </div>
		  <div class="panel-body">
      <!-- show the picture of the user that posted the room -->
        <%= image_tag avatar_url(room.user), class: "img-circle avatar-small" %>&nbsp;
    <!-- makes a link to the room listed -->
		    <%= link_to room.listing_name, room %>
		  </div>
	  </div>
	</div>

  <% end %>
</div>
<div class="row">
Bay-Arenac Career Center C<br />04-0012<br />Andrew Thumma, Cameron Dore, Orion Lamothe<br />
</div>
<!-- enables datepicker functionality -->
<script>
  $(function() {
  	$("#start_date").datepicker({
  		dateFormat: 'dd-mm-yy',
  		minDate: 0,
  		maxDate: '3m',
  		onSelect: function(selected) {
  			$('#end_date').datepicker("option", "minDate", selected);
  			$('#end_date').attr('disabled', false);
  		}
  	});

  	$("#end_date").datepicker({
  		dateFormat: 'dd-mm-yy',
  		minDate: 0,
  		maxDate: '3m',
  		onSelect: function(selected) {
  			$('#start_date').datepicker("option", "maxDate", selected);
  		}
  	});
  })
</script>